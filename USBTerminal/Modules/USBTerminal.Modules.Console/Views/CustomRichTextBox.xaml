<RichTextBox x:Class="USBTerminal.Modules.Console.Views.CustomRichTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:USBTerminal.Modules.Console"
             Background="Black"
             IsReadOnly="True"
             IsReadOnlyCaretVisible="True"
             Loaded="onLoaded"
             MouseEnter="onSetKeyboardFocus"
             PreviewMouseRightButtonDown="onPreviewMouseRightButtonDown"
             SelectionBrush="White"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <FlowDocument>
        <Paragraph x:Name="readOnlyItems" />
        <Paragraph MinWidowLines="15">
            <local:CustomRun x:Name="inputField"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 Foreground="LimeGreen"
                                 Text="I am editable" />
        </Paragraph>
    </FlowDocument>
</RichTextBox>

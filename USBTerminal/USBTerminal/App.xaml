<prism:PrismApplication x:Class="USBTerminal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USBTerminal"
             xmlns:core="clr-namespace:USBTerminal.Core;assembly=USBTerminal.Core"
             xmlns:prism="http://prismlibrary.com/" >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- FROM SITE: http://mahapps.com/guides/quick-start.html
                    this changes top panel-->

                <ResourceDictionary Source="pack://application:,,,/USBTerminal.Core;component/Resources/Icons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/USBTerminal.Core;component/Resources/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/USBTerminal.Core;component/Resources/CommonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/USBTerminal.Core;component/Resources/ImageResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
